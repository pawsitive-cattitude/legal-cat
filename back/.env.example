# Google Cloud Configuration
# Required for Google ADK and Vertex AI services
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account-key.json

# Legacy Google AI API (optional - only needed for fallback LLMAnalyzer)
# Note: The new ADK system uses Vertex AI instead
GOOGLE_API_KEY=your-google-ai-api-key

# ChromaDB Configuration (optional - uses local storage by default)
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_PERSIST_DIRECTORY=./chroma_db

# Legal Document Storage
LEGAL_DOCS_PATH=/tmp/legal_docs

# MCP Server Configuration
MCP_SERVER_TIMEOUT=30
MCP_TOOL_FILTER=extract_pdf_text,index_legal_document,search_legal_knowledge,build_document_graph

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
MAX_FILE_SIZE_MB=50
SUPPORTED_FILE_TYPES=pdf